<Window
    x:Class="WPF.OnClap.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.OnClap"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Wallpaper Focus Tool - WPF"
    Width="900"
    Height="600"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>

        <SolidColorBrush x:Key="PrimaryColor" Color="#2BC4A9" />
        <SolidColorBrush x:Key="TextDark" Color="#333333" />
        <SolidColorBrush x:Key="TextLight" Color="#666666" />
        <SolidColorBrush x:Key="CardBackground" Color="White" />

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        Opacity="0.5"
                        ShadowDepth="2"
                        Color="#DDDDDD" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MethodRadioButton" TargetType="RadioButton">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Margin" Value="0,0,15,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                            x:Name="border"
                            Background="#FAFAFAFA"
                            BorderBrush="#EEEEEE"
                            BorderThickness="1"
                            CornerRadius="6">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock
                                    x:Name="icon"
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI Symbol"
                                    FontSize="24"
                                    Foreground="{StaticResource TextLight}"
                                    Text="{TemplateBinding Tag}" />
                                <TextBlock
                                    x:Name="text"
                                    HorizontalAlignment="Center"
                                    FontFamily="HarmonyOS Sans SC"
                                    FontSize="12"
                                    Foreground="{StaticResource TextLight}"
                                    Text="{TemplateBinding Content}" />
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#4B89F3" />
                                <Setter TargetName="border" Property="Background" Value="#EAF2FF" />
                                <Setter TargetName="text" Property="Foreground" Value="#4B89F3" />
                                <Setter TargetName="icon" Property="Foreground" Value="#4B89F3" />
                                <Setter TargetName="text" Property="FontWeight" Value="Bold" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#BBBBBB" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5F5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid ClipToBounds="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="15"
                        FontWeight="Bold"
                        Foreground="{StaticResource TextDark}"
                        Text="原始图片" />

                    <Grid
                        Grid.Row="1"
                        Margin="15,0,15,15"
                        Background="#F0F0F0">
                        <Image x:Name="ImgOriginal" Stretch="Uniform" />

                        <Button
                            Margin="10"
                            Padding="10,5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="#88000000"
                            BorderThickness="0"
                            Click="BtnOpen_Click"
                            Content="⇄ 更换"
                            Foreground="White">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                        <ContentPresenter Margin="{TemplateBinding Padding}" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="#999999"
                            Text="请点击更换上传图片"
                            Visibility="{Binding ElementName=ImgOriginal, Path=Source, Converter={x:Static local:BooleanToVisibilityConverter.Instance}, FallbackValue=Visible}" />
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid ClipToBounds="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="15"
                        FontWeight="Bold"
                        Foreground="{StaticResource TextDark}"
                        Text="模糊效果预览" />

                    <Grid
                        x:Name="PreviewContainer"
                        Grid.Row="1"
                        Margin="15,0,15,15"
                        Background="#F0F0F0">
                        <Image x:Name="ImgPreview" Stretch="Uniform">
                            <Image.Effect>
                                <BlurEffect
                                    x:Name="MainBlurEffect"
                                    KernelType="Gaussian"
                                    Radius="{Binding ElementName=SliderBlur, Path=Value}" />
                            </Image.Effect>
                        </Image>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Border
            Grid.Row="1"
            Padding="20"
            Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        Margin="0,0,0,15"
                        FontWeight="Bold"
                        Foreground="{StaticResource TextDark}"
                        Text="模糊方法" />
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                            Checked="RadioMethod_Checked"
                            CommandParameter="Box"
                            Content="方框"
                            GroupName="BlurMethod"
                            Style="{StaticResource MethodRadioButton}"
                            Tag="" />

                        <RadioButton
                            Checked="RadioMethod_Checked"
                            CommandParameter="Gaussian"
                            Content="高斯"
                            GroupName="BlurMethod"
                            IsChecked="True"
                            Style="{StaticResource MethodRadioButton}"
                            Tag="▒" />

                        <RadioButton
                            Checked="RadioMethod_Checked"
                            CommandParameter="Stack"
                            Content="堆叠(不可用)"
                            GroupName="BlurMethod"
                            Style="{StaticResource MethodRadioButton}"
                            Tag="📚" />

                        <RadioButton
                            Checked="RadioMethod_Checked"
                            CommandParameter="Radial"
                            Content="径向(不可用)"
                            GroupName="BlurMethod"
                            Style="{StaticResource MethodRadioButton}"
                            Tag="◎" />
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Margin="40,0,0,0"
                    VerticalAlignment="Top">
                    <Grid Margin="0,0,0,15">
                        <TextBlock
                            FontWeight="Bold"
                            Foreground="{StaticResource TextDark}"
                            Text="模糊强度" />
                        <Border
                            Padding="8,2"
                            HorizontalAlignment="Right"
                            Background="#EAF2FF"
                            CornerRadius="4">
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="#4B89F3"
                                Text="{Binding ElementName=SliderBlur, Path=Value, StringFormat=F0}" />
                        </Border>
                    </Grid>

                    <Slider
                        x:Name="SliderBlur"
                        VerticalAlignment="Center"
                        IsSnapToTickEnabled="True"
                        Maximum="100"
                        Minimum="0"
                        TickFrequency="1"
                        Value="20" />
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="180"
                Margin="0,0,20,0"
                Click="BtnSave_Click"
                Content="📥 下载模糊图片"
                Style="{StaticResource PrimaryButton}" />
            <Button
                Width="120"
                Click="BtnReset_Click"
                Content="↻ 重置"
                Style="{StaticResource SecondaryButton}" />
        </StackPanel>

    </Grid>
</Window>
